{
    "_id": "tdd",
    "surveyTitle": "Technical Due Diligence",
    "section": [
        {
            "title": "Your Organisation",
            "form": [
                {
                    "_id": "tdd_a_1",
                    "question": "How many staff in your Technology / Digital Team?",
                    "fieldType": "select-box",
                    "fieldOptions": [ "1-100", "101-250", "251-500", "500+"]
                },
                {
                    "_id": "tdd_a_2",
                    "question": "Which industry standards or certifications does your organisation hold?",
                    "fieldType": "checkbox",
                    "fieldOptions": [ "PCI", "DSS", "ISO 27001"]
                }
            ]
        },
        {
            "title": "Your Software or Service",
            "form": [
                {
                    "_id": "tdd_b_1",
                    "question": "What does the software or service you are providing do?",
                    "fieldType": "long-text"
                },
                {
                    "_id": "tdd_b_2",
                    "question": "By what means, if any, does it connect to FT systems?",
                    "fieldType": "long-text"
                },
                {
                    "_id": "tdd_b_3",
                    "question": "Do you publish content to an FT branded site or social media platform?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_b_4",
                    "question": "Do you wholly own the software & IP you are providing the FT?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_b_5",
                    "question": "Is any part of the software or infrastructure sub-contracted to third parties or provided by subsidiaries?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "tdd_b_5_1",
                            "child_question_trigger": "Yes",
                            "question": "Do you audit them for due diligence?",
                            "fieldType": "binary",
                            "fieldOptions": ["Yes", "No"]
                        }
                    ]
                },
                {
                    "_id": "tdd_b_6",
                    "question": "Are you providing a hosted solution to the FT?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "tdd_b_6_1",
                            "child_question_trigger": "Yes",
                            "question": "Who owns/manages your underlying infrastructure?"
                        }
                    ]
                },
                {
                    "_id": "tdd_b_7",
                    "question": "Will the service you provide result in writing bespoke code for the FT?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                }
            ]
        },
        {
            "title": "Your Security - Incident management",
            "form": [
                {
                    "_id": "tdd_c_1",
                    "question": "Please provide contact details of your Cyber Security Lead and confirm if this is a 24 x 7 contact name and number?",
                    "fieldType": "long-text",
                    "fieldOptions": ["Yes", "No"],
                    "risk": {
                        "id": "2",
                        "trigger": "no"
                    }
                },
                {
                    "_id": "tdd_c_2",
                    "question": "Do you have an incident response plan in case of data breach or loss, theft of data, or security incident?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "tdd_c_2_1",
                            "child_question_trigger": "Yes",
                            "question": "Please attach a copy of your incident response plan.",
                            "fieldType": "upload"
                        }
                    ]
                },
                {
                    "_id": "tdd_c_3",
                    "question": "Has your company had any information security, data breaches or hacks in the last 12 months?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "tdd_c_3_1",
                            "child_question_trigger": "Yes",
                            "question": "Please describe the incident(s)"
                        }
                    ]
                },
                {
                    "_id": "tdd_c_4",
                    "question": "Is it your policy to inform affected customers of security incidents?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                }
            ]
        },
        {
            "title": "Your Security - Testing & Patching",
            "form": [
                {
                    "_id": "tdd_d_1",
                    "question": "When was the service or software provided last penetration-tested?"
                },
                {
                    "_id": "tdd_d_2",
                    "question": "Do you proactively run vulnerability tests?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "tdd_d_2_1",
                            "child_question_trigger": "Yes",
                            "question": "What and how often?"
                        }
                    ]
                },
                {
                    "_id": "tdd_d_3",
                    "question": "Do you apply security patches on all systems within 4 weeks of the patches becoming available?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "risk": {
                        "id": "3",
                        "trigger": "no"
                    }
                },
                {
                    "_id": "tdd_d_4",
                    "question": "Do you have malware protection installed on all servers and workstations?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                }
            ]
        },
        {
            "title": "Your Security - Data",
            "form": [
                {
                    "_id": "tdd_e_1",
                    "question": "If you are processing FT data, is confidential and personal data encrypted?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_e_2",
                    "question": "If you are processing FT data, is confidential and personal data in transit?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_e_3",
                    "question": "If you are processing FT data, is confidential and personal data at rest?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_e_4",
                    "question": "If you are processing FT data, is confidential and personal data backups and archiving?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_e_5",
                    "question": "If you are processing FT data, what volume of sensitive data will be held?",
                    "prompt": "Please include the number of records and volume (in GB)",
                    "fieldType": "long-text"
                }
            ]
        },
        {
            "title": "Your Security - Access",
            "form": [
                {
                    "_id": "tdd_f_6",
                    "question": "Is the use of shared user credentials prohibited among your staff?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_f_7",
                    "question": "Are users' access rights reviewed at regular intervals?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_f_8",
                    "question": "Do you enforce two-factor authentication for remote connectivity?",
                    "fieldType": "checkbox",
                    "fieldOptions": ["VPN", "Citrix", "Outlook Web Access", "Other"],
                    "risk": {
                        "id": "1",
                        "trigger": "no"
                    }
                },
                {
                    "_id": "tdd_f_9",
                    "question": "Do you enforce two-factor-authentication for access to systems that contain sensitive and personal data?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "risk": {
                        "id": "1",
                        "trigger": "no"
                    }
                },
                {
                    "_id": "tdd_f_10",
                    "question": "Do you enforce two-factor authentication for systems that publish content to an FT-branded site or social media platform?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "risk": {
                        "id": "1",
                        "trigger": "no"
                    }
                },
                {
                    "_id": "tdd_f_11",
                    "question": "Do you ensure that passwords are changed regularly and meet complexity requirements?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "tdd_f_12",
                    "question": "Do you rotate keys, passwords and terminate accounts of all staff that have left?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                }
            ]
        }
    ]
}
