{
    "_id": "bcm",
    "surveyTitle": "Business Continuity Management",
    "section": [
        {
            "title": "BCM",
            "form": [
                {
                    "_id": "bcm_01",
                    "question": "Do you have BCM embedded in your organisation?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "bcm_02",
                    "question": "Are you accredited to ISO22301?",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"]
                },
                {
                    "_id": "bcm_03",
                    "question": "Do you have a regularly reviewed Business Continuity Plan for the service you are supplying the FT",
                    "fieldType": "binary",
                    "fieldOptions": ["Yes", "No"],
                    "child_questions": [
                        {
                            "_id": "bcm_04",
                            "child_question_trigger": "Yes",
                            "question": "How often is it reviewed?"
                        }
                    ]
                },
                {
                    "_id": "bcm_05",
                    "question": "When did you last physically test that recovery plan?"
                },
                {
                    "_id": "bcm_06",
                    "question": "What is the Recovery Time Objective of the service you are supplying the FT?",
                    "fieldType": "long-text"
                }
            ]
        },
        {
            "title": "Data",
            "form": [
                {
                    "_id": "bcm_07",
                    "question": "Where is the data you are storing for the FT held?",
                    "prompt": "Method of storage & Country where stored.",
                    "fieldType": "long-text"
                },
                {
                    "_id": "bcm_08",
                    "question": "What frequency do you Backup data that you are holding of the FT?"
                },
                {
                    "_id": "bcm_09",
                    "question": "Do you perform mirror image Backups or take backups at set frequency?",
                    "prompt": "If latter what is that frequency?"
                },
                {
                    "_id": "bcm_10",
                    "question": "What timeframe will the FT service be recovered from a backup?"
                }
            ]
        }
    ]
}
