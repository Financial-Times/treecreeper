{
	"name": "biz-ops-api",
	"short": "biz-ops-api",
	"team": "internal-products",
	"version": "1.0.0",
	"description": "",
	"main": "server/app.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Financial-Times/biz-ops-api.git"
	},
	"engines": {
		"node": ">= 8.11.1",
		"npm": ">= 5.6.0"
	},
	"scripts": {
		"lint": "eslint --cache --fix .",
		"lint-ci": "eslint .",
		"start": "nodemon -r dotenv/config server/app.js",
		"debug": "npm start -- --inspect=0.0.0.0:9229",
		"test:debug": "npm run test-dev --  --inspect-brk",
		"test": "nyc mocha -- \"+(server|test|schema)/**/*.spec.js\"",
		"test-dev": "NODE_ENV=test mocha --require dotenv/config 'test/**/*.spec.js'",
		"init-db": "node -r dotenv/config schema/init-db.js",
		"docker:test": "docker-compose exec \"$npm_package_short\" sh -c 'npm run test'",
		"vault:read": "vault read --format json  /secret/teams/$npm_package_team/$npm_package_name/development",
		"vault:env": "node -pe 'const { data } = JSON.parse(process.argv[1]); Object.keys(data).reduce((env, key) => { env += `${key}=${data[key]}\n`; return env}, \"\")' \"$(npm --silent run vault:read)\" > .env",
		"precommit": "node_modules/.bin/secret-squirrel",
		"commitmsg": "node_modules/.bin/secret-squirrel-commitmsg",
		"test:load:run": "docker-compose -f scripts/load-testing/statsd/docker-compose.yaml up -d && artillery run scripts/load-testing/$TEST_NAME.yaml && docker-compose -f scripts/load-testing/statsd/docker-compose.yaml down",
		"test:load:generateData": "node scripts/load-testing/lib/generate/index.js",
		"test:load:readQueries": "TEST_NAME=readQueries npm run test:load:run",
		"test:load:writeQueries": "TEST_NAME=writeQueries npm run test:load:run",
		"test:load:deleteWrites": "node scripts/load-testing/after-request.js"
	},
	"nyc": {
		"exclude": [
			"**/test/**",
			"**/*.spec.js",
			"**/node_modules/**"
		],
		"reporter": [
			"html",
			"text",
			"text-summary",
			"lcov"
		],
		"all": true,
		"cache": true
	},
	"author": "reliability engineering <reliability.engineering@ft.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Financial-Times/biz-ops-api/issues"
	},
	"homepage": "https://github.com/Financial-Times/biz-ops-api#readme",
	"nodemonConfig": {
		"ext": "js,graphql,yaml"
	},
	"dependencies": {
		"@financial-times/n-logger": "^5.7.0",
		"@financial-times/s3o-middleware": "^2.0.6",
		"apollo-server-express": "^1.4.0",
		"aws-sdk": "^2.275.1",
		"body-parser": "^1.18.3",
		"common-tags": "^1.7.2",
		"connect-timeout": "^1.9.0",
		"date-fns": "^1.29.0",
		"express": "^4.16.3",
		"express-async-errors": "^3.0.0",
		"faker": "^4.1.0",
		"fs": "0.0.1-security",
		"graphql": "^0.13.2",
		"graphql-server-express": "^1.4.0",
		"graphql-tools": "^3.0.1",
		"http-errors": "^1.6.3",
		"isomorphic-fetch": "^2.2.1",
		"js-yaml": "^3.12.0",
		"neo4j-driver": "^1.6.2",
		"neo4j-graphql-js": "^0.1.24",
		"nodemon": "^1.18.2"
	},
	"devDependencies": {
		"@financial-times/secret-squirrel": "^2.8.0",
		"artillery": "^1.6.0-22",
		"artillery-plugin-statsd": "^2.2.0",
		"casual": "^1.5.19",
		"chai": "^4.1.2",
		"dotenv": "^6.0.0",
		"eslint": "^4.19.1",
		"eslint-config-origami-component": "^1.0.0",
		"eslint-config-prettier": "~2.9.0",
		"eslint-plugin-prettier": "~2.6.1",
		"husky": "^0.14.3",
		"lodash": "^4.17.10",
		"mocha": "^5.1.1",
		"nyc": "^12.0.2",
		"prettier": "~1.13.7",
		"proxyquire": "^2.0.1",
		"sinon": "^6.1.3",
		"sinon-chai": "^3.0.0",
		"supertest": "^3.1.0",
		"uuid": "^3.2.1"
	}
}
