  "version": "1.0.0",
  "description": "",
  "main": "server/app.js",
  "scripts": {
    "start": "export $(cat .env | xargs) && nodemon server/app.js",
    "test": "istanbul cover -i \"+(server|scripts)/**/*.js\" -x \"+(server|scripts)/**/*.spec.js\" --report html --include-all-sources node_modules/.bin/_mocha -- --require test-config \"+(server|scripts|tests)/**/*.spec.js\" --recursive --exit",
    "test-dev": "export $(cat .env | xargs) && mocha tests/**/*.spec.js",
    "init-db": "export $(cat .env | xargs) && node scripts/init.js",
    "vault:env": "vault read --format json  /secret/teams/$npm_package_team/$npm_package_name/development | jq -r \".data|to_entries|map(\\\"\\(.key)=\\(.value|tostring)\\\")|.[]\" > .env",
    "precommit": "node_modules/.bin/secret-squirrel",
    "commitmsg": "node_modules/.bin/secret-squirrel-commitmsg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/gdpr-biz-op-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Financial-Times/gdpr-biz-op-api/issues"
  },
  "homepage": "https://github.com/Financial-Times/gdpr-biz-op-api#readme",
  "dependencies": {
    "@financial-times/n-logger": "^5.5.7",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "isomorphic-fetch": "^2.2.1",
    "neo4j": "^2.0.0-RC2",
    "neo4j-driver": "^1.5.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "@financial-times/secret-squirrel": "^2.7.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "istanbul": "^1.0.0-alpha.2",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "save": "^2.3.1",
    "sinon": "^4.1.6"
  }
