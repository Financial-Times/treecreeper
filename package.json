{
  "name": "gdpr-biz-ops-api",
  "short": "biz-ops-api",
  "team": "internal-products",
  "version": "1.0.0",
  "description": "",
  "main": "server/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/gdpr-biz-ops-api.git"
  },
  "scripts": {
    "start": "nodemon -r dotenv/config server/app.js",
    "debug": "nodemon -r dotenv/config --inspect=0.0.0.0:9229 server/app.js",
    "test": "istanbul cover -i \"+(server|scripts)/**/*.js\" -x \"+(server|scripts)/**/*.spec.js\" --report html --include-all-sources node_modules/.bin/_mocha -- --require test-config \"+(server|scripts|tests)/**/*.spec.js\" --recursive --exit",
    "test-dev": "NODE_ENV=test mocha -r test-config  -r dotenv/config tests/**/*.spec.js",
    "test:debug": "NODE_ENV=test mocha --inspect-brk=0.0.0.0:9088 -r test-config  -r dotenv/config tests/**/*.spec.js",
    "init-db": "node -r dotenv/config scripts/init.js",
    "docker:test": "docker-compose exec \"$npm_package_short\" sh -c 'npm run test'",
    "vault:read": "vault read --format json  /secret/teams/$npm_package_team/$npm_package_name/development",
    "vault:env": "node -pe 'const { data } = JSON.parse(process.argv[1]); Object.keys(data).reduce((env, key) => { env += `${key}=${data[key]}\n`; return env}, \"\")' \"$(npm --silent run vault:read)\" > .env",
    "precommit": "node_modules/.bin/secret-squirrel",
    "commitmsg": "node_modules/.bin/secret-squirrel-commitmsg"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Financial-Times/gdpr-biz-ops-api/issues"
  },
  "homepage": "https://github.com/Financial-Times/gdpr-biz-ops-api#readme",
  "dependencies": {
    "@financial-times/n-logger": "^5.5.7",
    "aws-sdk": "^2.206.0",
    "body-parser": "^1.18.2",
    "connect-timeout": "^1.9.0",
    "express": "^4.16.2",
    "isomorphic-fetch": "^2.2.1",
    "neo4j": "^2.0.0-RC2",
    "neo4j-driver": "^1.5.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "webpack": "^2.7.0"
  },
  "devDependencies": {
    "@financial-times/secret-squirrel": "^2.7.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "husky": "^0.14.3",
    "istanbul": "^1.0.0-alpha.2",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "proxyquire": "^1.8.0",
    "save": "^2.3.1",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0"
  }
}
